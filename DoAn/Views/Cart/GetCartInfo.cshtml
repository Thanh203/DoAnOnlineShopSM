@using DoAn.Models.EF
@model List<CartItem>
@{
    ViewBag.Title = "GetCart";
    Layout = "~/Views/Shared/_LayoutPage2.cshtml";
    var format = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
}
<head>
    <link rel="stylesheet" href="~/Content/stproduct.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"></script>
    <meta charset="UTF-8">
</head>
<body>
    <div id="wrapper">
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <div class="container-fluid">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h3 class="m-0 font-weight-bold text-primary">Danh sách Title</h3>
                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>TÊN</th>
                                            <th>ẢNH</th>
                                            <th>SỐ LƯỢNG</th>
                                            <th>ĐƠN GIÁ</th>
                                            <th>THÀNH TIỀN</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var product in Model)
                                        {
                                            <tr>
                                                <td>@product.ProductID</td>
                                                <td>@product.NamePro</td>
                                                <td><img src="~/Images/@product.ImagePro" style="width:100px; height:120px;" /></td>
                                                <td>@product.Number</td>
                                                <td>@String.Format(format, "{0:c0}", @product.Price)</td>
                                                <td>@String.Format(format, "{0:c0}", @product.FinalPrice())</td>
                                            </tr>
                                        }
                                        <tr style="font-weight:bold; text-align:right; color:red;">
                                            <td colspan="4">Tổng số lượng: @ViewBag.TotalNumber</td>
                                            <td colspan="2">Tổng tiền: @String.Format(format, "{0:c0}", @ViewBag.TotalPrice)</td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        @using (Html.BeginForm("CheckOut", "Cart"))
                                        {
                                            <table style="border-collapse:separate; border-spacing:5px;width:100%;">
                                                <tr>
                                                    <td><label for="CodeCustomer">Tên Khách hàng :</label></td>
                                                    <td> <input type="text" name="CodeCustomer" id="CodeCustomer" required /></td>
                                                </tr>
                                                <tr>
                                                    <td><label for="AddressDeliverry">Địa chỉ giao hàng : </label></td>
                                                    <td> <input type="text" name="AddressDeliverry" id="AddressDeliverry" required /></td>
                                                </tr>
                                                <tr>
                                                    <td><label for="NumberPhone">Số điện thoại giao hàng : </label></td>
                                                    <td> <input type="text" name="NumberPhone" id="NumberPhone" required /></td>
                                                </tr>
                                                <tr>
                                                    <td></td>
                                                    <td>
                                                        <input type="submit" value="Thanh toán" class="btn btn-success" />
                                                    </td>
                                                </tr>
                                            </table>
                                        }
                                    </tfoot>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Assets/Admin/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>

</body>
