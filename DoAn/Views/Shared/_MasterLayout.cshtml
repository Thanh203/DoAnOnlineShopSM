
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/Content/style.css" />

    <!-- icont link-->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

</head>


<body>
    <header class="header">
        <a href="/Home/Index/#home" class="logo">
            <img src=@Url.Content("/Images/Logo.png") alt="Logo" class="img-logo" />
        </a>

        <nav class="navbar">
            <a href="/HomeUser/Index/#home">Trang chủ</a>
            <a href="/HomeUser/Index/#about">Về cửa hàng</a>
            <a href="/HomeUser/Index/#menu">Menu</a>
            <a href="/HomeUser/Index/#review">Review</a>
            <a href="/HomeUser/Index/#contact">Liên hệ</a>
            <a href="/HomeUser/Index/#blogs">Blogs</a>
        </nav>

        <div class="icons">
            <div class="fas fa-shopping-cart" id="cart-btn"></div>
            <a href="~/Area/Login/"><div class="fas fa-sign-in-alt"></div></a>
            <a href="~/Area/Admin"><div class="fas fa-laugh-wink"></div></a>
            <div class="fas fa-bars" id="menu-btn"></div>

        </div>
    </header>

    <div>
        @RenderBody()
    </div>
    <section class="footer">

        <div class="share">
            <a href="#" class="fab fa-facebook-f"></a>
            <a href="#" class="fab fa-twitter"></a>
            <a href="#" class="fab fa-instagram"></a>
            <a href="#" class="fab fa-linkedin"></a>
            <a href="#" class="fab fa-pinterest"></a>
        </div>



        <div class="credit">created by <span>Phúc-Thanh-Chiến-Duy</span> | Sunday morning</div>

    </section>
    <script src="~/Assets/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/Admin/vendor/bootstrap/js/bootstrap.min.js"></script>

    <script src="~/Assets/Admin/js/sb-admin-2.js"></script>
    @RenderSection("jsFooter", required: false)
</body>
</html>
